@using Microsoft.AspNetCore.Razor.Language.Extensions
@model LetsLearn.Models.StudentHomeworkModel
<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' type='text/css' href="/css/detail.css" media="all">
    <link href="https://fonts.googleapis.com/css?family=Fontdiner+Swanky" rel="stylesheet">
    <title>Detalii despre @Html.DisplayFor(model => model.FirstName)</title>
    
</head>
<body>
<div class="pagina">
    <div class="submeniu">

        <a id="backButton" asp-action="Clasa">🠸</a>

        <h2 id="titlu">LearningMath <strong></strong></h2>
        <div class="butoane">
            <a asp-action="StudentDetail" asp-route-id="@Html.ViewData.Model.Id">Detalii despre  @Html.DisplayFor(model => model.FirstName)</a>
            <a asp-action="SeeExercices" asp-route-id="@Html.ViewData.Model.Id">Vezi exercițile rezolvate</a>
            <a asp-action="SeePoints" asp-route-id="@Html.ViewData.Model.Id">Vezi punctajele</a>
            <a asp-action="AddGrade" asp-route-id="@Html.ViewData.Model.Id">Adaugă o notă</a>
            <a asp-action="SendEmail" asp-route-id="@Html.ViewData.Model.Id">Trimite un email</a>
        </div>
    </div>
    <div class="note">
        <h3>Exerciții rezolvate de <strong> @Html.DisplayFor(model => model.LastName) @Html.DisplayFor(model => model.FirstName)</strong></h3>

        <table class="note_detail">
            
            <tr>
                <th class="tablehead">Tema</th>
                <th class="tablehead">Cerința</th>
                <th class="tablehead">Rezolvarea elevului</th>
                <th class="tablehead">Rexolvare profesorului</th>
                <th class="tablehead">Nota</th>
            </tr>
            @foreach (var item in Model.homeworks)
            {
            <tr>
                <td class="tabcontent"> @item.HomeworkTitle</td>
                <th class="tabcontent">@item.HomeworkContainer</th>
                <td class="tabcontent">@item.CorrectAnswer</td>
                <td class="tabcontent">@item.StudentAnswer</td>
                <td class="tabcontent">@item.grade</td>
            </tr>
            }

        </table>


    </div>

</div>

</body>

</html>

