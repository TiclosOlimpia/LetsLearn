@model EditProfileModel
@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel='stylesheet' type='text/css' href="/css/form.css" media="all">
</head>

<div id="Register">
    <div class="content">
        <h1 class="form-title">Register</h1>
        <form method="post" asp-controller="Users" asp-action="Edit" asp-route-id="@Html.ViewData.Model.Id"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <span asp-validation-for="LastName" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <span asp-validation-for="FirstName" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <span asp-validation-for="EmailAddress" class="text-danger">@ViewBag.EmailAddress</span>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
            </div>


            <span asp-validation-for="UserName" class="text-danger">@ViewBag.UserName</span>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Nume de utilizator</label>
                <input asp-for="UserName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" value="Alege o fotogratie" title="Alege o fotografie" as />
            </div>

            <div class="group">
                <input type="submit" value="Register" class="signupbtn" />
                
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
