@model EditProfileModel
@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel='stylesheet' type='text/css' href="/css/form.css" media="all">
    
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var read = new FileReader();
                read.onload = function(e) {
                    $('#Image1')
                    .attr('src', e.target.result);

                };
                read.readAsDataURL(input.files[0]);
            }
            
        }
    </script>
</head>

<div id="Register">
    <div class="content">
        <h1 class="form-title">Editează-ți profilul</h1>
        <form method="post" asp-controller="Users" asp-action="Edit" asp-route-id="@Html.ViewData.Model.Id"enctype="multipart/form-data">
        <img src=@ViewBag.img  id="Image1"/>
        <div id="ed">
            <button id="files" onclick="document.getElementById('file').click(); return false;">Schimbă fotografia</button>
            <input asp-for="Image" type="file" id="file" style="visibility: hidden;" onchange="readURL(this);" accept="image/*"/>
        </div>
           
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <span asp-validation-for="LastName" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control"/>
                </div>

                <span asp-validation-for="FirstName" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control"/>
                </div>

                <span asp-validation-for="EmailAddress" class="text-danger">@ViewBag.EmailAddress</span>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control"/>
                </div>


                <span asp-validation-for="UserName" class="text-danger">@ViewBag.UserName</span>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Nume de utilizator</label>
                    <input asp-for="UserName" class="form-control"/>
                </div>

                <div class="group">
                    <input type="submit" value="Editează" class="signupbtn"/>

                </div>
            </form>
        </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
