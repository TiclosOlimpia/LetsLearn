@model ContactModel
@{
    ViewData["Title"] = "COntact";
}



<!DOCTYPE html>

<html>
<head>
    <title>COntact</title>
    <link rel='stylesheet' type='text/css' href="/css/contact.css" media="all">
    <link rel="icon" type="image/png" href="images/icons/favicon.png" />
</head>
<body>
<h1>@ViewBag.msg</h1>
<div class="grup" >
    <div id="Contact">
        <div class="cadran">
            <h1 class="form-title">Contactează-ne</h1>
            <form method="post" asp-controller="Home" asp-action="Contact">
                <div class="container">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FromEmailAddress" class="control-label">Email-ul tau</label>
                        <input asp-for="FromEmailAddress" class="form-control" value="@ViewBag.email" id="Conținut" />
                    </div>
                    <span asp-validation-for="FromEmailAddress" class="text-danger"></span>
                    
                   
                    <hr />
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label">Subiect</label>
                        <input asp-for="Subject" class="form-control" />
                    </div>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Continut" class="control-label"></label>
                        <textarea asp-for="Continut" class="form-control" id="Conținut"></textarea>
                    </div>
                    <span asp-validation-for="Continut" class="text-danger"></span>
                    <hr />


                    <div class="group">
                        <input type="submit" value="Trimite" class="signupbtn" />

                    </div>
                </div>
            </form>

        </div>
    </div>
    <div class="contact-container">
        <h1 id="contact-title">
            Contactează-ne
        </h1>

        <div class="contact-list">
            <p><span>🌢 Adresa: </span>Facultatea de Informatică - Iași</p>
            <p><span>📞 Telefon: </span>+40 762 988 877 </p>
            <p><span>📧 Email: </span><a href="MAILTO:mletslearn@gmail.com">mletslearn@gmail.com</a></p>
            <p><span>🌍 Website: </span><a href="#">www.LetsLeaarn.ro</a></p>
        </div>


    </div>
</div>
</body>
</html>