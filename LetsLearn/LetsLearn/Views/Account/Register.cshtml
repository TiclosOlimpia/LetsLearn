@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel='stylesheet' type='text/css' href="/css/form.css" media="all">
</head>

<div id="Register">
    <div class="content">
        <h1 class="form-title">Register</h1>
        <form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <span asp-validation-for="LastName" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <span asp-validation-for="FirstName" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <span asp-validation-for="EmailAddress" class="text-danger">@ViewBag.EmailAddress</span>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
            </div>


            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <select asp-for="Class" class="text-control">
                    <option class="form-control" value="-"> - </option>
                    <option class="form-control" value="clasa I A"> clasa I A </option>
                    <option class="form-control" value="clasa I B"> clasa I B</option>
                    <option class="form-control" value="clasa a II-a A"> clasa a II-a A </option>
                    <option class="form-control" value="clasa a II-a B">clasa a II-a B</option>
                    <option class="form-control" value="clasa a II-a A"> clasa a III-a A </option>
                    <option class="form-control" value="clasa a II-a B">clasa a III-a B</option>
                    <option class="form-control" value="clasa a II-a A"> clasa a IV-a A </option>
                    <option class="form-control" value="clasa a II-a B">clasa a IV-a B</option>
                </select>
                <span></span>
            </div>

            <span asp-validation-for="UserName" class="text-danger">@ViewBag.UserName</span>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Nume de utilizator</label>
                <input asp-for="UserName" class="form-control" />
            </div>

            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" value="Alege o fotogratie" title="Alege o fotografie" as/>
            </div>
            

            <did class="form-group">
                <input type="checkbox" asp-for="IsTeacher" /> Sunt Profesor <br />
            </did>


            <div class="group">
                <input type="submit" value="Register" class="signupbtn" />
                <a href="LogIn" class="alternative">LogIn daca ai deja un cont </a>
            </div>
        </form>
    </div>
</div>